@model XorIndexVM;

@{
    ViewData["Title"] = "Encrypt Binary";
}
    <div class="container">
        <h1>XOR More</h1>
        <div class="mb-3">
            <label for="filePath" class="form-label">Binary File</label>
            <div class="input-group">
                <input type="text" class="form-control" id="filePath" readonly>
                <label class="btn btn-primary" id="browseButton" for="binaryFile">Browse</label>
                <input hidden type="file" asp-for="BinaryFile" id="binaryFile"></input>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="FileSize" class="form-label">File Size</label>
            <input asp-for="FileSize" type="text" class="form-control" id="fileSize" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="XorSize" class="form-label">XOR Size</label>
            <select asp-for="XorSize" asp-items="Model.XorSizeSelect" class="form-select" id="xorSize">
            </select>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Generate Key</button>
        </div>
        <input hidden asp-for="CurrentKey"></input>
        <div class="mb-3">
            <label asp-for="CurrentValueBinary" class="form-label">Current Value BIN</label>
            <input asp-for="CurrentValueBinary" type="text" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="CurrentValueInt" class="form-label">Current Value INT</label>
            <input asp-for="CurrentValueInt" type="text" class="form-control" readonly>
        </div>
        <div class="mb-3">
            <label asp-for="CurrentValueHex" class="form-label">Current Value HEX</label>
            <input asp-for="CurrentValueHex" type="text" class="form-control" readonly>
        </div>
        <button class="btn btn-success" id="exportXorButton" disabled>Export XOR</button>
        <div class="mt-3" id="status"></div>
    </div>
